<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.easygo.vilius.pasiklydauapp.HistoryActivity"
    android:background="#825e5e">>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location history"
        android:id="@+id/leaderboard_header"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:theme="@style/AppTheme"
        android:fontFamily="sans-serif-light"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                  Address                                   Date"
        android:id="@+id/textView4"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_below="@+id/leaderboard_header"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:textColor="#000000"
        android:id="@+id/leaderboard_listview"
        android:divider="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:dividerHeight="2.0sp"
        android:layout_alignEnd="@+id/textView4"
        tools:listitem="@android:layout/simple_list_item_2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete records"
        android:id="@+id/delete_btn"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
